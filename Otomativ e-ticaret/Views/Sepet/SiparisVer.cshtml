@using DTOLayer.DTOs.Siparis;
@model SiparisDTO

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<partial name="./_ValidationScriptsPartial"></partial>

<style>
	input, textarea {
		width:100%;
		text-align:center;
		margin-bottom:15px;
	}
</style>

<form id="siparisformu" class="w-50 mx-auto text-center mt-3 mb-3" asp-controller="sepet" asp-action="SiparisVer" method="post">
	<h2>Sİpariş Formu</h2>

		<span asp-validation-for="ad"></span><br>
		<label asp-for="ad">Adınız:</label><br>
		<input type="text" id="ad" asp-for="ad"><br>

		<span asp-validation-for="soyad"></span><br>
		<label asp-for="soyad">Soyadınız:</label><br>
		<input type="text" id="soyad" asp-for="soyad"><br>

		<span asp-validation-for="email"></span><br>
		<label asp-for="email">E-posta Adresiniz:</label><br>
		<input type="email" id="email" asp-for="email"><br>

		<span asp-validation-for="telefon"></span><br>
		<label asp-for="telefon">Telefon Numaranız:</label><br>
		<input type="tel" id="telefon" asp-for="telefon"><br>

		<span asp-validation-for="adres"></span><br>
		<label asp-for="adres">Adresiniz:</label><br>
		<input type="text" id="adres" asp-for="adres"><br>

		<h3>Siparişinizin Detayları:</h3>

		<ul>
			<partial name="../PartialViews/_SepetUrunlerPartial" model="@ViewBag.siparis"></partial>
		</ul>

		<label for="ad">Kart Sahibi Ad Soyad:</label><br>
		<input type="text" id="kartsahibi" name="kartsahibi"><br>

		<label for="kartno">Kart Numaranız:</label><br>
		<input type="text" id="kartno" name="kartno" minlength="16" maxlength="16"><br>

		<label for="skt">Son Kullanma Tarihi:</label><br>
		<input type="month" id="skt" name="skt"><br>

		<label for="cvv">CVV Kodu:</label><br>
		<input type="password" id="cvv" name="cvv" minlength="3" maxlength="4"><br>

		<input type="submit" value="Siparişi Tamamla">
	
</form>

@if (ViewBag.siparishata != null)
{
	<div class="alert alert-danger">
		<partial name="../PartialViews/_ErrorPartial" model="@ViewBag.siparishata"></partial>
	</div>
}


