@using DTOLayer.DTOs.SifreDegistir;
@model SifreViewModel

@{
    Layout = "AdminUILayout";
}

<h1>Sifre Değiştir</h1>

 <form asp-action="sifredegistir" asp-controller="a_Admin" method="post">
        <input type="hidden" asp-for="AdminId" value="@ViewBag.AdminId" />
        <span asp-validation-for="oldpassword"></span>
        <label asp-for="oldpassword" class="form-label">Eski şifre</label>
        <input type="password" class="form-control" asp-for="oldpassword" placeholder="Eski şifre" />
        <span asp-validation-for="newpassword"></span>
        <label asp-for="newpassword" class="form-label">Yeni şifre</label>
        <input type="password" class="form-control" asp-for="newpassword" placeholder="Yeni şifre" />
        <span asp-validation-for="confirmpassword"></span>
        <label asp-for="confirmpassword" class="form-label">Yeni şifre tekrar</label>
        <input type="password" class="form-control" asp-for="confirmpassword" placeholder="Yeni şifre tekrar"  />
        <input type="submit" class="btn btn-outline-success"/>
    </form>